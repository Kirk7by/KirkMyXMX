@model KirkMyXMX.Models.MainClass
@{
    ViewBag.Title = "Home Page";
}

@section Scripts {
    @Scripts.Render("~/Scripts/my-scripts/jquery-1.11.1.min.js")
    @Scripts.Render("~/Scripts/my-scripts/device.min.js")
    @Scripts.Render("~/Scripts/my-scripts/jquery.mb.YTPlayer.js")
    @Scripts.Render("~/Scripts/my-scripts/custom.js")
   
}

<section class="big-background">
    <a id="bgndVideo" class="player" data-property="{videoURL:'@Model.GetString()',containment:'body',autoPlay:true, mute:false, startAt:0, opacity:1}"></a>
    
    <div class="pattern"></div>
    <div class="big-background-container">
        <h1 class="big-background-title">Киркинатор </h1>
        <div class="divider"></div>
        <h1 id="colorize">Личный сайт Кирилла Кандидатова </h1>
        <a href="http://kirkmyxmx.azurewebsites.net/" class="big-background-btn">Интернет-версия</a>
    </div>
</section>



<div class="wrapper">
    
    <section class="about-section">
       
        <div class="about-section-container">
            <h2 class="about-section-title">Продвинутая версия сайта </h2>
            <p>Добро пожаловать  на моём сайте, пока это тестовый экземпляр, но всё же мы на правильном пути! Ознакомиться с исходным кодом можете можно на гитхабе!</p>
            <a href="https://github.com/Kirk7by" target="_blank" class="about-section-btn">Гитхаб!</a>
        </div>

    </section>


    <section class="small-background-section">
        <div class="pattern"></div>
        <div class="small-background-container">
            <h2 class="small-background-title"><span>В дальнейшем будет происходить портирование всех моих проектов на этот домен! </span></h2>
            <ul class="socials">
                <li><a href="https://vk.com/kirk_by" target="_blank"><i class="fa fa-facebook-square fa-3x"></i></a></li>
                <li><a href="https://twitter.com/kirk_by" target="_blank"><i class="fa fa-twitter-square fa-3x"></i></a></li>
                <li><a href="https://www.youtube.com/channel/UCNlu0Kh2EHRYLRzEJGJG8eA" target="_blank"><i class="fa fa-google-plus-square fa-3x"></i></a></li>

            </ul>
        </div>
    </section>


</div>
